{
    "name": "vitto-repo",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "turbo run dev",
        "build": "turbo run build",
        "start": "turbo run start --filter=website",
        "cleanup": "turbo cleanup --cache=local:rw && pnpm dlx rimraf pnpm-lock.yaml node_modules",
        "update-deps": "npm-check-updates --configFileName .ncurc.json",
        "publish:dry": "turbo publish:dry --filter=vitto",
        "publish:npm": "turbo publish:npm --filter=vitto",
        "format": "biome format . --write",
        "lint": "turbo lint --cache=local:rw,remote:r",
        "check": "turbo check --cache=local:rw,remote:r",
        "typecheck": "turbo typecheck --cache=local:rw,remote:r"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.2.6",
        "npm-check-updates": "^19.1.1",
        "turbo": "^2.5.8"
    },
    "packageManager": "pnpm@10.18.3",
    "engines": {
        "node": ">=22"
    }
}
