{
    "name": "create-vitto",
    "version": "0.0.1",
    "type": "module",
    "description": "Command-line utility to scaffold Vite apps using Vitto.",
    "author": "Aris Ripandi <aris@duck.com>",
    "license": "MIT",
    "homepage": "https://github.com/riipandi/vitto",
    "funding": "https://github.com/riipandi/vitto?sponsor=1",
    "repository": {
        "type": "git",
        "url": "https://github.com/riipandi/vitto",
        "directory": "packages/create-vitto"
    },
    "bugs": {
        "url": "https://github.com/riipandi/vitto/issues"
    },
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": "./dist/index.js",
        "./package.json": "./package.json"
    },
    "bin": {
        "create-vitto": "./bin/create-vitto.js"
    },
    "scripts": {
        "build": "tsdown",
        "dev": "tsdown --watch",
        "prepublishOnly": "NODE_ENV=production tsdown",
        "publish:dry": "NODE_ENV=production pnpm publish --no-git-checks --dry-run",
        "publish:npm": "NODE_ENV=production pnpm publish --no-git-checks",
        "cleanup": "pnpm dlx del-cli dist node_modules .turbo",
        "lint": "biome lint . --write",
        "check": "biome check . --write",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "citty": "^0.1.6",
        "consola": "^3.4.2",
        "picospinner": "^3.0.0"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.2.6",
        "@types/node": "^24.8.1",
        "tsdown": "^0.15.7",
        "typescript": "~5.9.3",
        "vite": "^7.1.10"
    },
    "files": [
        "bin/**/*",
        "dist/**/*",
        "!tests/**/*",
        "!dist/**/*.*.map",
        "!tests/**/*.*.map",
        "package.json",
        "template-*",
        "LICENSE",
        "README.md"
    ],
    "publishConfig": {
        "access": "public",
        "executableFiles": [
            "./bin/create-vitto.js"
        ]
    },
    "keywords": [
        "cli",
        "vento",
        "command-line",
        "utilities",
        "generator",
        "vite"
    ],
    "engines": {
        "node": "^20.19.0 || >=22.12.0"
    }
}
