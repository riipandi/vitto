{
    "name": "website",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "check": "biome check . --write",
        "format": "biome format . --write",
        "lint": "biome lint . --write",
        "cleanup": "pnpm dlx del-cli .wrangler dist",
        "start": "pnpm dlx serve dist -l 3000 -nCL",
        "cf:deploy": "pnpm -s build && wrangler pages deploy",
        "cf:preview": "pnpm -s build && wrangler pages dev",
        "update-deps": "npm-check-updates",
        "typecheck": "tsc -b --noEmit"
    },
    "dependencies": {
        "ufo": "^1.6.1"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.2.6",
        "@tailwindcss/vite": "^4.1.14",
        "@types/node": "^24.8.1",
        "tailwindcss": "^4.1.14",
        "typescript": "^5.9.3",
        "vite": "^7.1.10",
        "vitto": "workspace:*",
        "wrangler": "^4.43.0"
    }
}
